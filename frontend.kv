<CameraScreen>:
    GridLayout:
        cols: 1
        padding: 15
        spacing: 15

        Camera:
            id: camera
            # resolution: (640, 480)
            play: False
            size_hint_y: 0.8
            opacity: 0

        Button:
            id: camera_btn
            text: "Start Camera"
            size_hint_y: 0.1
            on_press: root.start() if root.ids.camera.play == False else root.stop()
            background_normal: "images/normal.png"
            background_down: "images/down.png"

        Button:
            text: "Capture"
            size_hint_y: 0.1
            on_press: root.capture()
            background_normal: "images/normal.png"
            background_down: "images/down.png"

<ImageScreen>:
    GridLayout:
        cols: 1
        padding: 15
        spacing: 15
        Image:
            id: captured_img
            size_hint_y: 0.7
        Button:
            text: "Create Shareable Link"
            size_hint_y: 0.1
            on_press: root.create_link()
            background_normal: "images/normal.png"
            background_down: "images/down.png"
        Label:
            id: link
            text: ""
            size_hint_y: 0.1
        GridLayout:
            cols: 2
            size_hint_y: 0.1
            Button:
                text: "Copy Link"
                on_press: root.copy_link()
                background_normal: "images/normal.png"
                background_down: "images/down.png"
            Button:
                text: "Open Link"
                on_press: root.open_link()
                background_normal: "images/normal.png"
                background_down: "images/down.png"

<RootWidget>:
    # To change the background of the whole app
    canvas.before:
        Color:
            rgba: (0.3, 0.2, 0.1, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    CameraScreen:
        id: camera_screen
        name: "camera_screen"
    ImageScreen:
        id: image_screen
        name: "image_screen"
